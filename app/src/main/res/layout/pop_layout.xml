<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
    />
    <LinearLayout
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:weightSum="10"
    >
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="3"
                      android:background="#222222"
                      android:orientation="vertical"
                      android:weightSum="2"
                      android:paddingTop="20dp"
                      android:paddingBottom="20dp"
        >
            <TextView
                    android:id="@+id/tvShortMonth"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:text="may"
                    android:textSize="18sp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_weight="1"
            />
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:layout_weight="1"
                          android:orientation="vertical"
            >

                <TextView
                        android:id="@+id/tvShortDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:text="30"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:gravity="center"
        >

            <TextView
                    android:id="@+id/tvPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:text="Great Britain"
                    android:textSize="14sp"
                    android:textStyle="normal"
            />
            <TextView
                    android:id="@+id/tvEventName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:text="Ed Sheeran"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:maxLines="1"
            />
            <TextView
                    android:id="@+id/tvVenue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:text="College Street Music Hall"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:maxLines="2"
            />


        </LinearLayout>


    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
    >
        <com.sackcentury.shinebuttonlib.ShineButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@android:color/darker_gray"
                android:id="@+id/like"
                app:btn_color="#222222"
                app:btn_fill_color="#ff0000"
                app:allow_random_color="false"
                app:siShape="@raw/heart"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

        />
        <TextView
                android:text="LIKE TO JOIN THE EVENT!"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#222222"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginLeft="14dp"
        />


    </LinearLayout>

    <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:textSize="14sp"
            android:textStyle="normal"
            android:lines="1"
            android:text="asdfdasg"
            android:maxLines="10"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="5dp"
    />

</LinearLayout>